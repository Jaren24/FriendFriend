<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33B5E5">

    <EditText
        android:id="@+id/edt_emails"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/round_corner"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_LoginPassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_corner"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_emails"
        app:layout_constraintStart_toStartOf="@+id/edt_emails"
        app:layout_constraintTop_toBottomOf="@+id/edt_emails" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_button"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="@+id/edt_LoginPassword"
        app:layout_constraintStart_toStartOf="@+id/edt_LoginPassword"
        app:layout_constraintTop_toBottomOf="@+id/edt_LoginPassword" />

    <TextView
        android:id="@+id/DontHave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Don't have an account? Click here to Sign Up"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/bt_login"
        app:layout_constraintStart_toStartOf="@+id/bt_login"
        app:layout_constraintTop_toBottomOf="@+id/bt_login" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="175dp"
        android:layout_height="74dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:text="Friend"
        android:textColor="@android:color/background_light"
        android:textSize="65sp"
        android:textStyle="italic"
        app:fontFamily="cursive"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="175dp"
        android:layout_height="74dp"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginBottom="60dp"
        android:text="Friend"
        android:textColor="@android:color/background_light"
        android:textSize="65sp"
        android:textStyle="italic"
        app:fontFamily="cursive"
        app:layout_constraintBottom_toTopOf="@+id/edt_emails"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>